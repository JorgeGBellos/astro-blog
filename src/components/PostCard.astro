---
//library imports
import { Image } from "@astrojs/image/components";

import Link from "./Link.astro";

//utils.js import
import { slugify, formatDate } from "../js/util";

const { frontmatter, url, tagType } = Astro.props;
const { title, date, author, image, description, category } = frontmatter;
const Tag = tagType;
---

<article class="card">
    <small>
        <a href={`/category/${category}`} class="badge">{category}</a>
    </small>
    <a href={url} tabindex="-1" aria-hidden="true">
        <Image
            src={image.src}
            alt={image.alt}
            width={400}
            height={200}
            format="webp"
            fit="cover"
            quality={80}
            aspectRatio="4:1"
        />
    </a>
    <div class="content">
        <div>
            <Tag class="h3">
                <a href={url}>{title}</a>
            </Tag>
            <small>
                by <a href={`author/${slugify(author)}`}>{author}</a> - {
                    formatDate(date)
                }
            </small>
        </div>
        <p>{description}</p>
        <Link
            href={url}
            text="Read Post"
            style="secondary"
        />
    </div>
</article>
